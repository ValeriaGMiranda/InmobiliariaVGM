@model IEnumerable<inmobiliariaVGM.Models.Inquilino>

@{
    ViewData["Title"] = "Listado de Inquilinos";
}

<h1>Listado de Inquilinos</h1>

<p>
    <a asp-action="Create">Crear nuevo inquilino</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.Id_Inquilino }) |
                @Html.ActionLink("Detalles", "Details", new { id=item.Id_Inquilino }) |
                @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Inquilino }) |
                @Html.ActionLink("Ver Contratos", "ContratosPorInquilino","Contratos", new { id=item.Id_Inquilino }) |
            </td>
        </tr>
}
    </tbody>
</table>
