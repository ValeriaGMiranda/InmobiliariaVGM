@model inmobiliariaVGM.Models.CambiarPassword

@{
    ViewData["Title"] = "Cambiar Password";
}

<h1>Cambiar Password</h1>

<h4>Cambiar Password</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CambiarPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" name="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Confirmacion" class="control-label"></label>
               <input type="password" name="Confirmacion" class="form-control">
                <span asp-validation-for="Confirmacion" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Cambiar Password" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

