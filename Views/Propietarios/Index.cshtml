@model IEnumerable<inmobiliariaVGM.Models.Propietario>

@{
    ViewData["Title"] = "Listado de Propietarios";
}

<h1>Listado de Propietarios</h1>

<p>
    <a asp-action="Create">Crear nuevo propietario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.Id_Propietario }) |
                @Html.ActionLink("Detalles", "Details", new { id=item.Id_Propietario }) |
                @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Propietario })
            </td>
        </tr>
}
    </tbody>
</table>
