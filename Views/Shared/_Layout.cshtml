<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - inmobiliariaVGM</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/inmobiliariaVGM.styles.css" asp-append-version="true" />
    </head>
    <body>
        <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light p-3 justify-content-center">
    <a class="navbar-brand" href="#">VGM</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" 
    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
       
        <ul class="navbar-nav mr-auto">
         <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Propietarios" asp-action="Index">Propietarios</a>
        </li>
            <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Inquilinos" asp-action="Index">Inquilinos</a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Inmuebles
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
           <a class="dropdown-item" asp-controller="Inmuebles" asp-action="Index">Inmuebles</a>
           <a class="dropdown-item" asp-controller="Inmuebles" asp-action="BuscarInmuebles">Busqueda de Inmuebles</a>
           
        </li>
         <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Contratos" asp-action="Index">Contratos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Pagos" asp-action="Index">Pagos</a>
            </li>
            @if(User.IsInRole("Administrador"))
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                </li>
            }  
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Informes
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
           <a class="dropdown-item" asp-controller="Contratos" asp-action="ContratosVigentes">Contratos Vigentes</a>
           <a class="dropdown-item" asp-controller="Inmuebles" asp-action="BuscarInmuebles">Busqueda de Inmuebles</a>
           <a class="dropdown-item"  asp-controller="Contratos" asp-action="ContratosInmuebles">Contratos por Inmueble</a>
           <hr class="dropdown-divider">
           <a class="dropdown-item" asp-controller="Inmuebles" asp-action="InmueblesEstados">Inmuebles por Disponiblidad</a>
           <a class="dropdown-item" asp-controller="Inmuebles" asp-action="BuscarInmuebles">Busqueda de Inmuebles</a>
           <a class="dropdown-item" asp-controller="Inmuebles" asp-action="InmueblesContratos">Inmuebles Disponibles por Fecha</a>
        </li>
       </ul>
        <form class="form-inline my-2 my-lg-0">
         <ul class="navbar-nav mr-auto"><li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Perfil
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" asp-controller="Usuarios" asp-action="EditarPerfil">Editar Perfil</a>
           <a class="dropdown-item" asp-controller="Usuarios" asp-action="CambiarPassword">Cambiar Password</a>           
        </li></ul>
        <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Logout">Logout</a>
        </form>
    </div>
    </nav>
    <div class="container pt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - inmobiliariaVGM
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
